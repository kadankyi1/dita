<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dita" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryVariant">@color/colorDarkBlue</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorViolet</item>
        <item name="colorSecondaryVariant">@color/colorViolet</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="loginActivityHintStyle" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorDarkBlue</item>
        <item name="colorControlNormal">@color/colorDarkBlue</item>
        <item name="colorControlActivated">@color/colorDarkBlue</item>
        <item name="android:textColorHighlight">@color/colorLightGray</item>
        <item name="android:textColorLink">@color/colorDarkBlue</item>
    </style>


    <style name="ProgressBarBlack" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:indeterminateTint">@color/colorDarkBlue</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="ProgressBarWhite" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:backgroundTint">@color/colorDarkBlue</item>
        <item name="android:indeterminateTint">@color/colorWhite</item>
        <item name="android:minWidth">200dp</item>
    </style>
</resources>